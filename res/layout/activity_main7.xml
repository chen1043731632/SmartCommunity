<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 设备信息设置模块（IXmInfoManager ）的接口 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设备信息设置模块（IXmInfoManager ）的接口"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/xmGetTimezoneType"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="GetTimezoneType" />
        <Button
            android:id="@+id/xmSetTimezoneType"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="SetTimezoneType" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/xmGetLanguage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="xmGetLanguage" />
        <Button
            android:id="@+id/xmSetLanguageType"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="xmSetLanguageType" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/xmGetInstallState"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="xmGetInstallState" />
        <Button
            android:id="@+id/xmSetInstallState"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="xmSetInstallState" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <Button
            android:id="@+id/xmGetMotionParams"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="xmGetMotionParams" />
        <Button
            android:id="@+id/xmSetMotionParams"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="xmSetMotionParams" />
    </LinearLayout>
    <Button
        android:id="@+id/xmModifyDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xmModifyDeviceName"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/xmGetBrightness"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="xmGetBrightness" />
        <Button
            android:id="@+id/xmSetBrightness"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="xmSetBrightness" />
    </LinearLayout>
    <Button
        android:id="@+id/xmSetBrightnessMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xmSetBrightnessMode"/>
