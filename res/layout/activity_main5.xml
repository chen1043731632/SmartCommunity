<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 添加模块（IXmBinderManager）的接口 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加模块（IXmBinderManager）的接口"/>
    <Button
        android:id="@+id/setOnBindListener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置绑定回调" />
    <Button
        android:id="@+id/beginWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置无线密码并开始配置" />
    <Button
        android:id="@+id/pauseWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂停配置" />
    <Button
        android:id="@+id/continueWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="继续配置" />
    <Button
        android:id="@+id/exitSendWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exitSendWork" />
    <Button
        android:id="@+id/exitSearchWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exitSearchWork" />
    <Button
        android:id="@+id/exitAllWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exitAllWork" />


    <!-- 查看日志打印 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看日志打印"/>
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false"
        android:background="#dddddd">
        <TextView
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dddddd"
            android:textColor="#000000"/>
    </ScrollView>

</LinearLayout>