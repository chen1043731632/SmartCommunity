<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:background="@color/color_list_background"
         android:orientation="horizontal" >

        <LinearLayout
             android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态：" />

            <TextView
                android:id="@+id/tx_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关"
                android:textColor="@color/alert_blue"
                 />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" 
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度：" />

            <TextView
                 android:id="@+id/tx_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:textColor="@color/alert_blue"
                 />
        </LinearLayout>
        
        <LinearLayout
             android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" 
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风速：" />

            <TextView
                 android:id="@+id/tx_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动"
                android:textColor="@color/alert_blue"
                />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" 
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风向：" />

            <TextView
                 android:id="@+id/tx_wd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动"
                android:textColor="@color/alert_blue"
               />
        </LinearLayout>
        
       
    </LinearLayout>
    <TextView
          android:layout_width="fill_parent"
          android:layout_height="1dp"
           android:background="@color/line_gray" /> 

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
         android:background="@color/color_list_background"
         android:orientation="horizontal" >
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模式："
                />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
             >
            <TextView
                 android:id="@+id/tx_mod1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="制热"
                android:textColor="@color/alert_blue"
                android:textSize="20sp" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp">

            <TextView
                 android:id="@+id/tx_mod2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抽湿"
                android:textColor="@color/alert_blue"
                android:textSize="20sp" />
        </LinearLayout>
        
       
    </LinearLayout>
    
     <TextView
          android:layout_width="fill_parent"
          android:layout_height="1dp"
           android:background="@color/line_gray" /> 
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bt_open"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="开" />

            <Button
                android:id="@+id/bt_close"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="关" />

            <Button
                android:id="@+id/bt_cool"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="制冷" />

            <Button
                android:id="@+id/bt_dehumidifier"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="抽湿" />

            <Button
                android:id="@+id/bt_airsupply"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="送风" />

            <Button
                android:id="@+id/bt_heat "
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="制热" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bt_sub"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/set_bg"
                    android:gravity="center"
                    android:text="-" />

                <EditText
                    android:id="@+id/ed_tem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:hint="温度"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bt_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/set_bg"
                    android:gravity="center"
                    android:text="+" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_sendtem"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="设置温度" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/ed_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:hint="空调型号"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bt_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/set_bg"
                    android:gravity="center"
                    android:text="设置空调型号" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_hibernate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="休眠" />

            <Button
                android:id="@+id/bt_initauto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="初始化启动" />

            <Button
                android:id="@+id/bt_initover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="初始化结束" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bt_wsauto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="自动风速" />

            <Button
                android:id="@+id/bt_ws1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="风速1" />

            <Button
                android:id="@+id/bt_ws2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="风速2" />

            <Button
                android:id="@+id/bt_ws3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="风速3" />

            <Button
                android:id="@+id/bt_wdauto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="自动风向" />

            <Button
                android:id="@+id/bt_wdmanual"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/set_bg"
                android:gravity="center"
                android:text="手动风向" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>